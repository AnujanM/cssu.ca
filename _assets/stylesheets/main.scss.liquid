/* Home styles */
/* ----------------------------------------------------------*/

.home {
  padding-bottom: 1.5em;
  width: 100%;

  h1 {
    background-color: $grey;
    color: #fff;
    font-size: 1.5em;
    font-weight: 300;
    padding: 0.75em;
    width: 100%;
  }
}

#hero-text {
  background-color: #e1e1e1;
  margin: 0 auto;
  max-width: 2000px;
  padding: 3.5em 1em;
  text-align: center;
  width: 85%;

  span {
    display: block;
    font-size: 2.25em;
    font-weight: 300;
    line-height: 1.2em;
    margin-bottom:  1.5em;

    strong {
      font-weight: 600;
    }
  }

  p {
    a {
      border-bottom: 1px dotted $dark-grey;
      color: $dark-grey;
      font-weight: 600;

      &:hover { text-decoration: none; }
    }

    & + p {
      margin-top: 1em;
    }
  }
}

#home-row {
  display: table;
  padding-top: 1.5em;
  width: 100%;
}

  #home-row-inner {
    display: table-row;
  }

  #home-news,
  #home-events {
    display: table-cell;
    vertical-align: top;
    width: 50%;

    & > a:hover {
      text-decoration: none;
    }

    .empty {
      min-height: 0 !important;
      text-align: center;
    }
  }

  #home-news {
    padding-left: 15px;
  }

  #home-events {
    padding-right: 15px;

    li { min-height: 5em; }

    .event-date {
      background-color: $grey;
      color: #fff;
      float: left;
      height: 5em;
      margin-right: 15px;
      text-align: center;
      padding: 10px;
      width: 5em;

      .event-month {
        font-size: 1em;
        margin-bottom: 5px;
        text-transform: uppercase;
      }

      .event-day { font-size: 2.25em; }
    }
  }

  #home-row .posts {
    background-color: #e1e1e1;
    padding: 20px;

    li + li { margin-top: 20px; }

    a { color: $grey; }
  }

.posts {
  list-style-type: none;

  li + li { margin-top: 1.5em; }

  .post-link {
    color: $grey;
    display: block;
    font-size: 24px;
    line-height: 1;
    margin-bottom: 0.5em;
  }

  p {
    font-size: 0.9em;
  }
}

.page-list {
  margin: 0 !important;
  padding: 0 !important;
}

ul.members-list {
  a {
    color: $grey;

    &:hover { text-decoration: none; }
  }

  li {
    display: inline-block;
    padding: 0.75em;
    transition: background-color 0.3s;
    vertical-align: top;

    &:hover { background-color: #eee; }

    img {
      background-color: #eee;
      border-radius: 50%;
      border: none;
      display: block;
      height: 5.5em;
      margin: 0 auto 0.5em;
      object-fit: cover;
      width: 5.5em;
    }
  }
}

  .member-name { font-weight: 600; }

  .member-role { font-weight: 300; }

#home-members {
  margin-top: 30px;
  width: 100%;

  & > a:hover {
    text-decoration: none;
  }
}

  .members {
    background-color: #e1e1e1;
    text-align: center;
    overflow-x: auto;
    width: 100%;

    ul {
      max-width: 0;  // This prevents it from being too wide
      padding: 20px;
      white-space: nowrap;
      width: auto;
    }

    li {
      min-width: 10em;
    }
  }

.members-page {
  text-align: center;

  a { color: $grey; }

  ul {
    margin: 0 !important;
    padding: 0 !important;

    & + h2 {
      margin-top: 2em;
    }

    li {
      width: 11em;
    }
  }

  + .members-page {
    border-top: 1px solid #eee;
    margin-top: 2em;
  }
}


/* Post styles */
/* ----------------------------------------------------------*/

.post { padding: 1.5em 0; }

.post-header {
  margin: 10px 0 30px;

  h1 {
    font-size: 42px;
    font-weight: 300;
    letter-spacing: -1.75px;
    line-height: 1;
    margin-bottom: 0.4em;
  }

  .meta {
    font-size: 15px;
    color: #818181;
    margin-top: 5px;
  }
}

.post-content {
  position: relative;

  > * { margin: 20px 0; }

  h1, h2, h3, h4, h5, h6 {
    line-height: 1;
    font-weight: 300;
    margin: 40px 0 20px;
  }

  h2 {
    font-size: 32px;
    letter-spacing: -1.25px;
  }

  h3 {
    font-size: 26px;
    letter-spacing: -1px;
  }

  h4 {
    font-size: 20px;
    letter-spacing: -1px;
  }

  blockquote {
    border-left: 4px solid #e8e8e8;
    padding-left: 20px;
    font-size: 18px;
    opacity: .6;
    letter-spacing: -1px;
    font-style: italic;
    margin: 30px 0;
  }

  ul,
  ol {
    padding-left: 20px;
  }

  img {
    display: block;
    margin: 0 auto;
    max-width: 100%;
  }
}

.post {
  pre, code {
    border-radius: 3px;
    border: 1px solid #d5d5e9;
    background-color: #eef;
    padding: 8px 12px;
    font-size: 15px;
    overflow: scroll;
  }

  code { padding: 1px 5px; }

  ul, ol { margin-left: 1.35em; }

  pre code {
    border: 0;
    padding-right: 0;
    padding-left: 0;
  }

  /* terminal */
  pre.terminal {
    border-radius: 3px;
    border: 1px solid #000;
    background-color: #333;
    color: #fff;
  }

  pre.terminal code { background-color: #333; }
}


/* Tag clouds */

.page-list {
  display: inline-block;
  vertical-align: top;
  width: 75%;
}

.tag-cloud {
  display: inline-block;
  margin: 0;
  vertical-align: top;
  width: 20%;

  h3 {
    margin-top: 0;
  }

  a {
    display: block;
    padding: 0.25em 0;
  }
}

@media screen and (max-width: 600px) {

  .page-list,
  .tag-cloud {
    display: block;
    width: 100%;
  }

  .tag-cloud {
    margin-top: 2em;
  }

}


/* Store */
/* ----------------------------------------------------------*/

#store table {
  width: 100%;
  margin-bottom: 2em;
  table-layout: fixed;
}

.store-left,
.store-right {
  display: inline-block;
  vertical-align: top;
  width: 49%;
}

.store-right {
  padding-left: 1%;
}


/* Typeform Styles */

.typeform-widget {
  height: 700px;
  width: 100%;
}

/* Media queries */
/* ----------------------------------------------------------*/

@media (max-width: 750px) {

  .wrap, #hero-text { width: 100%; }

  #home-news,
  #home-events {
    display: block !important;
    padding: 0 !important;
    width: 100% !important;
  }

  #home-events {
    margin-bottom: 30px;
  }

  .store-left,
  .store-right {
    display: block;
    padding: 0 !important;
    width: 100%;
  }

}

@media (max-width: 600px) {

  .wrap { padding-left: 12px; padding-right: 12px; }

  .site-header .wrap {
    background-image: none;
  }

  .site-nav {
    background-color: #fff;
    border: 1px solid lighten($dark-grey, 50%);
    margin-top: 0;
    position: fixed;
    right: 8px;
    top: 8px;
    z-index: 1000000;
  }

  .site-nav .menu-icon {
    color: $dark-grey;
    display: block;
    float: right;
    font-size: 16px;
    line-height: 33px;
    padding: 0 0.5em;
    text-align: center;
    text-transform: uppercase;
    width: 96px;

    &:hover { text-decoration: none; }

    span,
    svg {
      display: inline-block;
      vertical-align: middle;
    }

    span { margin-right: 0.5em; }

    svg { width: 18px; height: 15px; }
  }

  .site-nav .trigger {
    border-top: 1px solid lighten($dark-grey, 50%);
    clear: both;
    display: none;
    margin-bottom: 5px;
  }

  body.showmenu .trigger {
    display: block;
  }

  .site-nav .page-link {
    display: block;
    color: #000;
    text-align: right;
    line-height: 1.25;
    padding: 5px 10px 5px 20px;
    margin: 0;
  }

  .post-header  h1 { font-size: 36px; }
  .post-content h2 { font-size: 28px; }
  .post-content h3 { font-size: 22px; }
  .post-content h4 { font-size: 18px; }
  .post-content blockquote { padding-left: 10px; }
  .post-content ul,
  .post-content ol { padding-left: 10px; }

  .footer-info {
    display: block;
    padding: 3.5em 12px 2em;
    width: 100%;
  }

  .footer-map {
    display: block;
    height: 300px;
    width: 100%;
  }

  .typeform-widget {
    height: 300px !important;
  }

}
